@model ProductEditVM

<h4> Product Edit </h4>

<form method="post">

    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Name">Product Name</label>
        <input type="text" class="form-control" asp-for="Name" placeholder="Enter Product Name">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Description">Product Description</label>
        <input type="text" class="form-control" asp-for="Description" placeholder="Enter Product Description">
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" asp-for="Price" placeholder="Enter Price">
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Category">Product Category</label>
        <input type="text" class="form-control" asp-for="Category" placeholder="Enter Price">
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

@if (ViewBag.Error != null)
{
    <h6>@ViewBag.Error</h6>
}